<%- include('./partials/header') %>

<% if (typeof success !== 'undefined' && success.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="min-h-screen flex flex-col">
    <div class="container px-10 py-20 flex flex-grow">
        <!-- Sidebar Navigation -->
        <div class="w-[25%] flex flex-col items-start h-full">
            <div class="flex flex-col">
                <a class="block w-fit mb-2" href="/products">All Products</a>
                <a class="block w-fit mb-2" href="/products/create">Create New Product</a>
            </div>
        </div>

        <!-- Main Form Area -->
        <main class="w-3/4 bg-white p-8 shadow ml-4">
            <h2 class="text-xl font-bold mb-4">Create New Product</h2>
            <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                <!-- Product Details Section -->
                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-2">Product Details</h3>
                    <div class="mb-4">
                        <label class="block mb-2 font-medium" for="image">Product Image</label>
                        <input id="image" name="image" type="file" class="py-2 px-4 rounded w-full" required>
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <input name="name" type="text" placeholder="Product Name"
                            class="border p-2 rounded w-full" required>
                        <input name="price" type="number" step="0.01" placeholder="Product Price"
                            class="border p-2 rounded w-full" required>
                        <input name="discount" type="number" step="0.01" placeholder="Discount Price"
                            class="border p-2 rounded w-full">
                    </div>
                </div>

                <!-- Panel Color Settings Section -->
                <div>
                    <h3 class="text-lg font-semibold mb-2">Panel Details</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <input name="bgcolor" type="text" placeholder="Background Color (e.g. #f2f2f2)"
                            class="border p-2 rounded w-full">
                        <input name="panelcolor" type="text" placeholder="Panel Color"
                            class="border p-2 rounded w-full">
                        <input name="textcolor" type="text" placeholder="Text Color"
                            class="border p-2 rounded w-full">
                    </div>
                </div>

                <!-- Submit Button -->
                <input class="px-5 py-2 rounded mt-3 bg-blue-500 text-white cursor-pointer" type="submit"
                    value="Create New Product">
            </form>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>
